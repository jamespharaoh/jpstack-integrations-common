<console-module
	name="queue">

	<console-helper-provider
		object-name="queue">

		<context-stuff
			name="queueName"
			field="id"/>

		<priv-key
			name="queue.manage"
			delegate="parent"
			priv="manage"/>

	</console-helper-provider>

	<object-context
		name="queue"
		object-name="queue">

		<list>

			<context-tab-page
				name="listActive"
				tab-label="Active"
				title="Active queues"/>

			<context-tab-action-page
				name="users"
				title="List active users"/>

			<supervisor-page
				title="Queue supervisor"/>

			<context-tab-page
				name="supervisorItems"
				hide-tab="yes"/>

			<section
				name="report"
				label="Reports">

				<object-search-page
					name="queueItem"
					tab-label="Queue items"
					object-type="queueItem"
					search-class="wbs.platform.queue.model.QueueItemSearch"
					search-fields="queue-item-report-search"
					results-fields="queue-item-report-results"/>

			</section>

			<context-responder-page
				name="home"/>

			<context-responder-page
				name="filter"/>

			<context-get-action
				name="item"/>

			<context-action
				name="claim"/>

			<context-action
				name="unclaim"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<context-link
				name="item"
				link="queueItem"
				label="Items"
				priv-key="queue.manage"/>

		</object>

	</object-context>

	<field-set
		name="summary"
		object-name="queue">

		<id-field/>
		<parent-field/>
		<code-field/>

	</field-set>

	<field-set
		name="queue-item-report-search"
		class="wbs.platform.queue.model.QueueItemSearch">

		<timestamp-partial-field
			name="createdTime"
			label="Created time"/>

		<object-id-field
			name="processedUserId"
			object-type="user"
			nullable="yes"/>

	</field-set>

	<field-set
		name="queue-item-report-results"
		object-name="queueItem">

		<object-field
			name="processedUser"
			label="User"
			object-type="user"/>

		<object-field
			name="object"
			field="greatgrandparent"/>

		<object-field
			name="queue"
			object-type="queue"
			field="grandparent"
			root-field="greatgrandparent"/>

		<object-field
			name="item"
			object-type="queueItem"
			field="this"
			root-field="grandparent"/>

		<timestamp-field
			name="createdTime"
			label="Created"/>

		<timestamp-field
			name="pendingTime"
			label="Pending"/>

		<timestamp-field
			name="processedTime"
			label="Processed"/>

	</field-set>

</console-module>
