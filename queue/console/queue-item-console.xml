<console-module
	name="queue-item">

	<console-helper-provider
		object-name="queueItem"
		view-priv="grandparent:manage">

		<context-stuff
			name="queueItemName"
			field="id"/>

		<context-stuff
			name="queueSubjectId"
			delegate="queueSubject"
			field="id"/>

		<priv-key
			name="queueItem.manage"
			delegate="queueSubject.queue.parent"
			priv="manage"/>

		<run-post-processor
			name="queueSubject"/>

	</console-helper-provider>

	<object-context
		name="queueItem"
		object-name="queueItem">

		<list>

			<object-list-page
				fields="list">

				<list-browser
					field="createdTime"
					label="Date"/>

				<list-tab
					name="all"
					label="All"/>

				<list-tab
					name="active"
					label="Active">

					<where-in
						field="state">

						<item value="waiting"/>
						<item value="pending"/>
						<item value="claimed"/>

					</where-in>

				</list-tab>

			</object-list-page>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<context-link
				name="claim"
				link="queueItemClaim"
				label="Claims"
				priv-key="queueItem.manage"/>

			<context-tab-action-page
				name="actions"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="queueItem">

		<integer-field
			name="id"
			delegate="queueSubject"
			label="Subject"/>

		<index-field/>

		<text-field
			name="source"/>

		<text-field
			name="details"/>

		<timestamp-field
			name="createdTime"
			label="Created"/>

		<enum-field
			name="state"
			helper="queueItemStateConsoleHelper"/>

	</field-set>

	<field-set
		name="summary"
		object-name="queueItem">

		<id-field/>
		<parent-field/>

		<integer-field
			name="index"/>

		<text-field
			name="source"/>

		<text-field
			name="details"/>

		<integer-field
			name="refObjectId"/>

		<object-field
			name="processedUser"
			object-type="user"/>

		<yes-no-field
			name="processedByPreferredUser"/>

		<integer-field
			name="priority"/>

		<enum-field
			name="state"
			helper="queueItemStateConsoleHelper"/>

		<object-field
			name="queueItemClaim"
			object-type="queueItemClaim"/>

		<timestamp-field
			name="createdTime"/>

		<timestamp-field
			name="pendingTime"/>

		<timestamp-field
			name="cancelledTime"/>

		<timestamp-field
			name="processedTime"/>

	</field-set>

</console-module>