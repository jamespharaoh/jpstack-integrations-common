<console-module
	name="message-template-type">

	<console-helper-provider
		object-name="messageTemplateType"
		view-delegate-field="parent"
		view-delegate-priv-code="manage">
		
		<context-stuff
			name="messageTemplateTypeName"
			field="name"/>

		<context-stuff
			name="messageTemplateTypeId"
			field="id"/>

		<context-stuff
			name="messageTemplateDatabaseId"
			delegate="messageTemplateDatabase"
			field="id"/>

		<run-post-processor
			name="messageTemplateDatabase"/>

	</console-helper-provider>

	<object-context
		name="messageTemplateType"
		object-name="messageTemplateType">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"
				priv-key="messageTemplateDatabase.manage"/>
				
			<object-events-page/>
			
			<context-link
				name="messageTemplateParameter"
				link="messageTemplateParameter"
				label="Parameters"
				priv-key="messageTemplateDatabase.manage"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="messageTemplateType">

		<name-field/>

	</field-set>

	<field-set
		name="create"
		object-name="messageTemplateType">
		
		<parent-field/>
		
		<name-field/>

		<text-field
			name="defaultValue"/>		

		<text-field
			name="helpText"/>
			
		<integer-field
			name="minLength"/>
			
		<integer-field
			name="maxLength"/>

		<enum-field
			name="charset"
			nullable="no"
			helper="messageTemplateTypeCharsetConsoleHelper"/>
			
	</field-set>

	<field-set
		name="summary"
		object-name="messageTemplateType">

		<id-field/>
		<parent-field/>
		<code-field/>
		
		<name-field/>
		
		<text-field
			name="defaultValue"/>
			
		<text-field
			name="helpText"/>
			
		<integer-field
			name="minLength"/>
			
		<integer-field
			name="maxLength"/>	

		<enum-field
			name="charset"
			nullable="no"
			helper="messageTemplateTypeCharsetConsoleHelper"/>			

	</field-set>

	<field-set
		name="settings"
		object-name="messageTemplateType">

		<parent-field/>
		
		<name-field/>
		
		<text-area-field
			name="defaultValue"
			data-provider="messageTemplateSettingsFormFieldDataProvider"/>		
			
		<script-ref
			path="/js/jquery-1.7.1.js"/>
					
		<script-ref
			path="/js/message-template.js"/>
			
		<script-ref
			path="/js/gsm.js"/>
			
		<text-field
			name="helpText"/>
			
		<integer-field
			name="minLength"/>
			
		<integer-field
			name="maxLength"/>
		
		<enum-field
			name="charset"
			nullable="no"
			helper="messageTemplateTypeCharsetConsoleHelper"/>
			
	</field-set>

</console-module>