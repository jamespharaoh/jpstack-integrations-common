<console-module
	name="message-template-field-type">

	<console-helper-provider
		object-name="messageTemplateFieldType"
		view-delegate-field="messageTemplateEntryType.messageTemplateDatabase"
		view-delegate-priv-code="manage">

		<context-stuff
			name="messageTemplateFieldTypeName"
			field="name"/>

		<context-stuff
			name="messageTemplateEntryTypeId"
			delegate="messageTemplateEntryType"
			field="id"/>

		<run-post-processor
			name="messageTemplateEntryType"/>

		<priv-key
			name="messageTemplateFieldType.manage"
			delegate="messageTemplateEntryType.messageTemplateDatabase"
			priv="manage"/>

	</console-helper-provider>

	<object-context
		name="messageTemplateFieldType"
		object-name="messageTemplateFieldType">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"
				create-priv-delegate="messageTemplateDatabase"
				create-priv-code="manage"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="messageTemplateFieldType">

		<name-field/>
		<description-field/>

		<text-area-field
			name="defaultValue"/>

	</field-set>

	<field-set
		name="create"
		object-name="messageTemplateFieldType">

		<name-field/>
		<description-field/>

		<text-area-field
			name="defaultValue"/>

		<text-field
			name="helpText"/>

		<integer-field
			name="minLength"
			nullable="yes"/>

		<integer-field
			name="maxLength"
			nullable="yes"/>

		<enum-field
			name="charset"
			helper="messageTemplateTypeCharsetConsoleHelper"/>

	</field-set>

	<field-set
		name="summary"
		object-name="messageTemplateFieldType">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="defaultValue"/>

		<text-field
			name="helpText"/>

		<integer-field
			name="minLength"/>

		<integer-field
			name="maxLength"/>

		<enum-field
			name="charset"
			helper="messageTemplateTypeCharsetConsoleHelper"/>

	</field-set>

	<field-set
		name="settings"
		object-name="messageTemplateFieldType">

		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-area-field
			name="defaultValue"/>

		<text-field
			name="helpText"/>

		<integer-field
			name="minLength"
			nullable="yes"/>

		<integer-field
			name="maxLength"
			nullable="yes"/>

		<enum-field
			name="charset"
			helper="messageTemplateTypeCharsetConsoleHelper"/>

	</field-set>

</console-module>