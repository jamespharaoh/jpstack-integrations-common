<console-module
	name="message-template-entry-type">

	<console-helper-provider
		object-name="messageTemplateEntryType"
		view-delegate-field="messageTemplateDatabase"
		view-delegate-priv-code="manage">

		<context-stuff
			name="messageTemplateEntryTypeName"
			field="name"/>

		<context-stuff
			name="messageTemplateDatabaseId"
			delegate="messageTemplateDatabase"
			field="id"/>

		<run-post-processor
			name="messageTemplateDatabase"/>

		<priv-key
			name="messageTemplateEntryType.manage"
			delegate="messageTemplateDatabase"
			priv="manage"/>

	</console-helper-provider>

	<object-context
		name="messageTemplateEntryType"
		object-name="messageTemplateEntryType">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-link
				name="fieldType"
				link="messageTemplateFieldType"
				label="Fields"
				priv-key="messageTemplateDatabase.manage"/>

			<context-link
				name="parameter"
				link="messageTemplateParameter"
				label="Parameters"
				priv-key="messageTemplateDatabase.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="messageTemplateEntryType">

		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="create"
		object-name="messageTemplateEntryType">

		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="messageTemplateEntryType">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

	</field-set>

	<field-set
		name="settings"
		object-name="messageTemplateEntryType">

		<name-field/>
		<description-field/>
		<deleted-field/>

	</field-set>

</console-module>