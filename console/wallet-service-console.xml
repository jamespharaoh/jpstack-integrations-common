<console-module
	name="wallet-service">

	<console-helper-provider
		object-name="walletService">

		<context-stuff
			name="walletServiceName"
			field="id"/>

		<context-stuff
			name="walletServiceId"
			field="id"/>

		<context-stuff
			name="sliceId"
			delegate="slice"
			field="id"/>

		<priv-key
			name="walletService.manage"
			priv="manage"/>

		<run-post-processor
			name="slice"/>

	</console-helper-provider>

	<object-context
		name="walletService"
		object-name="walletService">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-link
				name="wallet"
				link="wallet"
				label="Wallets"
				priv-key="walletService.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="walletService">

		<parent-field/>

	</field-set>

	<field-set
		name="create"
		object-name="walletService">

		<parent-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="walletService">

		<id-field/>
		<parent-field/>
		<code-field/>

	</field-set>

	<field-set
		name="settings"
		object-name="walletService">

		<parent-field/>

	</field-set>

</console-module>
