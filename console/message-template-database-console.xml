<console-module
	name="message-template-database">

	<console-helper-provider
		object-name="messageTemplateDatabase">

		<context-stuff
			name="messageTemplateDatabaseName"
			field="id"/>

		<context-stuff
			name="messageTemplateDatabaseId"
			field="id"/>

		<context-stuff
			name="sliceId"
			field="slice.id"/>

		<priv-key
			name="messageTemplateDatabase.manage"
			priv="manage"/>

		<run-post-processor
			name="slice"/>

	</console-helper-provider>

	<object-context
		name="messageTemplateDatabase"
		object-name="messageTemplateDatabase"
		default-file="value">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"
				target-responder="messageTemplateDatabaseSettingsGeneralResponder"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					fields="settings"
					short-name="general"/>

				<context-link
					name="entryType"
					link="messageTemplateEntryType"
					label="Types"
					priv-key="messageTemplateDatabase.manage"/>

				<context-tab-form-action-page
					name="copy"
					action-form="copy"
					submit-label="copy"/>

			</section>

			<context-link
				name="value"
				link="messageTemplateSet"
				label="Values"
				priv-key="messageTemplateDatabase.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="messageTemplateDatabase">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="create"
		object-name="messageTemplateDatabase">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="messageTemplateDatabase">

		<id-field/>
		<code-field/>
		<parent-field/>
		<name-field/>
		<description-field/>


	</field-set>

	<field-set
		name="settings"
		object-name="messageTemplateDatabase">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="copy"
		class="wbs.services.messagetemplate.console.MessageTemplateCopyForm">

		<object-field
			name="sourceMessageTemplateDatabaseId"
			object-type="messageTemplateDatabase"/>

	</field-set>

	<form-contexts>

		<form-context
			name="copy"
			class="wbs.services.messagetemplate.console.MessageTemplateCopyForm"
			type="perform"
			column-fields="copy"/>

	</form-contexts>

</console-module>