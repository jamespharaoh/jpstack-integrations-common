<console-module
	name="slice">

	<console-helper-provider
		object-name="slice">

		<priv-key
			name="slice.manage"
			priv="manage"/>

		<context-stuff
			name="sliceName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="slice"
		object-name="slice">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="slice">

		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="slice">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- settings -->

		<text-field
			name="adminEmail"/>

		<timezone-field
			name="defaultTimezone"/>

		<integer-field
			name="defaultHourOffset"/>

		<text-field
			name="supervisorConfigNames"/>

		<text-area-field
			name="filter"/>

		<seconds-field
			name="queueOverflowInactivityTime"/>

		<seconds-field
			name="queueOverflowOverloadTime"/>

		<seconds-field
			name="queueOverflowGraceTime"/>

		<!-- statistics -->

		<timestamp-field
			name="currentQueueInactivityTime"/>

	</field-set>

	<field-set
		name="settings"
		object-name="slice">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="adminEmail"/>

		<timezone-field
			name="defaultTimezone"
			nullable="yes"/>

		<integer-field
			name="defaultHourOffset"
			minimum="0"
			maximum="23"/>

		<text-field
			name="supervisorConfigNames"
			nullable="yes"/>

		<seconds-field
			name="queueOverflowInactivityTime"
			nullable="yes"/>

		<seconds-field
			name="queueOverflowOverloadTime"
			nullable="yes"/>

		<seconds-field
			name="queueOverflowGraceTime"
			nullable="yes"/>

		<text-area-field
			name="filter"
			nullable="yes"/>

	</field-set>

</console-module>
