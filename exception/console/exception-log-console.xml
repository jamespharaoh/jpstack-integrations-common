<console-module
	name="exception-log">

	<console-helper-provider
		object-name="exceptionLog"
		view-priv="root:manage">

		<priv-key
			name="exceptionLog.manage"
			delegate="root"
			priv="manage"/>

		<context-stuff
			name="exceptionLogName"
			field="id"/>

	</console-helper-provider>

	<object-context
		name="exceptionLog"
		object-name="exceptionLog">

		<list>

			<priv-key
				name="exceptionLog.manage"
				delegate="root"
				priv="manage"/>

			<object-search-page
				search-fields="search"
				results-fields="results"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.platform.exception.model.ExceptionLogSearch">

		<yes-no-field
			name="alert"
			nullable="yes"/>

		<yes-no-field
			name="fatal"
			nullable="yes"/>

		<object-field
			name="typeId"
			object-type="exceptionLogType"
			nullable="yes"/>

		<object-field
			name="userId"
			object-type="user"
			nullable="yes"/>

	</field-set>

	<field-set
		name="results"
		object-name="exceptionLog">

		<timestamp-field
			name="timestamp"/>

		<object-field
			name="type"
			object-type="exceptionLogType"/>

		<text-field
			name="source"/>

		<object-field
			name="user"
			object-type="user"/>

		<yes-no-field
			name="fatal"/>

		<text-area-field
			name="summary"/>

	</field-set>

	<field-set
		name="summary"
		object-name="exceptionLog">

		<id-field/>

		<object-field
			name="type"
			object-type="exceptionLogType"/>

		<timestamp-field
			name="timestamp"/>

		<yes-no-field
			name="alert"/>

		<yes-no-field
			name="fatal"/>

		<text-field
			name="source"/>

		<text-field
			name="summary"/>

		<text-area-field
			name="dump"/>

	</field-set>

	<field-set
		name="settings"
		object-name="exceptionLog">

		<yes-no-field
			name="alert"/>

	</field-set>

</console-module>
