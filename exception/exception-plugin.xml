<plugin
	name="exception"
	package="wbs.platform.exception">

	<sql-scripts>
		<sql-schema name="exception"/>
		<sql-data name="exception-data"/>
	</sql-scripts>

	<models>

		<enum-type name="exceptionResolution"/>

		<model name="exceptionLog"/>
		<model name="exceptionLogType"/>

	</models>

	<layer name="logic">
		<bean class="logic.ExceptionLogLogicImplementation"/>
		<bean class="logic.ExceptionLoggerImplementation"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.ExceptionLogRemovalDaemon"/>
	</layer>

	<layer name="console">
		<bean class="console.ExceptionStatusLine"/>
		<bean class="console.ExceptionStatusLinePart"/>
		<bean class="console.NumExceptionsCache"/>
		<bean class="console.NumFatalExceptionsCache"/>
	</layer>

	<console-modules>
		<console-module name="exception-log"/>
	</console-modules>

</plugin>
