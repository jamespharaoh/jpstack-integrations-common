<console-module
	name="console-deployment">

	<console-helper-provider
		object-name="deploymentVersion"
		view-priv="root:manage">

		<priv-key
			name="deploymentVersion.manage"
			priv="root:manage"/>

		<context-stuff
			name="deploymentVersionName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="deploymentVersion"
		object-name="deploymentVersion">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="deploymentVersion">

		<name-field label="Version"/>
		<description-field/>

	</field-set>

	<field-set
		name="create"
		object-name="deploymentVersion">

		<name-field
			label="Version"
			pattern="^(\d+)\.(\d+)$"
			pattern-error="Version number must match 'x.y'"
			code-pattern="^(\d+)_(\d+)$"/>

		<description-field/>

		<text-area-field
			name="releaseNotes"/>

	</field-set>

	<field-set
		name="summary"
		object-name="deploymentVersion">

		<id-field/>
		<code-field/>

		<name-field
			label="Version"/>

		<description-field/>
		<deleted-field/>

		<text-area-field
			name="releaseNotes"/>

	</field-set>

	<field-set
		name="settings"
		object-name="deploymentVersion">

		<name-field
			label="Version"
			read-only="yes"/>

		<description-field/>
		<deleted-field/>

		<text-area-field
			name="releaseNotes"/>

	</field-set>

</console-module>
