<model-meta
	name="consoleDeployment"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="host"
			nullable="yes"/>

		<string-field
			name="serviceName"
			nullable="yes"/>

		<!-- state -->

		<enum-field
			name="state"
			type="deploymentState"
			nullable="yes"/>

		<timestamp-field
			name="stateTimestamp"
			column-type="sql"
			nullable="yes"/>

		<yes-no-field
			name="restart"
			default="no"/>

	</fields>

</model-meta>