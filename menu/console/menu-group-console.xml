<console-module
	name="menu-group">

	<console-helper-provider
		object-name="menuGroup"
		view-delegate-field="root"
		view-delegate-priv-code="manage">

		<priv-key
			name="menuGroup.manage"
			delegate="parent"
			priv="manage"/>

		<context-stuff
			name="menuGroupName"
			field="code"/>

	</console-helper-provider>

	<object-context
		name="menuGroup"
		object-name="menuGroup">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-link
				name="menu"
				link="menu"
				label="Menus"
				priv-key="menuGroup.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="menuGroup">

		<parent-field/>
		<name-field/>
		<descripton-field/>

		<text-field
			name="label"/>

		<integer-field
			name="order"/>

	</field-set>

	<field-set
		name="create"
		object-name="menuGroup">

		<parent-field/>
		<name-field/>
		<description-field/>

		<text-field
			name="label"/>

		<integer-field
			name="order"/>

	</field-set>

	<field-set
		name="summary"
		object-name="menuGroup">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="label"/>

		<integer-field
			name="order"/>

	</field-set>

	<field-set
		name="settings"
		object-name="menuGroup">

		<parent-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="label"/>

		<integer-field
			name="order"/>

	</field-set>

</console-module>
