<console-module
	name="menu-item">

	<console-helper-provider
		object-name="menuItem">

		<context-stuff
			name="menuName"
			field="code"/>

		<context-stuff
			name="menuGroupId"
			delegate="menuGroup"
			field="id"/>

		<priv-key
			name="menu.manage"
			delegate="grandparent"
			priv="manage"/>

		<run-post-processor
			name="menuGroup"/>

	</console-helper-provider>

	<object-context
		name="menuItem"
		object-name="menuItem">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"
				create-priv-delegate="root"
				create-priv-code="manage"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="menuItem">

		<name-field/>
		<description-field/>

		<text-field
			name="label"/>

		<text-field
			name="targetPath"/>

		<text-field
			name="targetFrame"/>

	</field-set>

	<field-set
		name="create"
		object-name="menuItem">

		<name-field/>
		<description-field/>

		<text-field
			name="label"/>

		<text-field
			name="targetPath"/>

		<text-field
			name="targetFrame"/>

	</field-set>

	<field-set
		name="summary"
		object-name="menuItem">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="label"/>

		<text-field
			name="targetPath"/>

		<text-field
			name="targetFrame"/>

	</field-set>

	<field-set
		name="settings"
		object-name="menuItem">

		<parent-field
			create-priv-delegate="root"
			create-priv-code="manage"/>

		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="label"/>

		<text-field
			name="targetPath"/>

		<text-field
			name="targetFrame"/>

	</field-set>

</console-module>
