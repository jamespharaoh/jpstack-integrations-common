<console-module
	name="user">

	<console-helper-provider
		object-name="user">

		<priv-key
			name="user.manage"
			priv="manage"/>

		<context-stuff
			name="userName"
			field="username"/>

	</console-helper-provider>

	<object-context
		name="user"
		object-name="user">

		<list>

			<object-list-page
				fields="list">

				<list-tab
					name="all"
					label="All users">

					<where-not-deleted/>

				</list-tab>

				<list-tab
					name="online"
					label="Online now">

					<where-not-deleted/>

					<where-not-null
						field="userOnline"/>

					<where-i-can-manage/>

				</list-tab>

				<list-tab
					name="deleted"
					label="Deleted">

					<where-deleted/>
					<where-i-can-manage/>

				</list-tab>

			</object-list-page>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-tab-action-page
				name="password"/>

			<object-links-page
				name="groups"
				links-field="groups"
				target-links-field="users"
				add-event-name="group_added"
				remove-event-name="group_removed"
				event-order="context-then-target"
				signal="user_privs"
				success-notice="User groups updated"
				fields="groups"
				owned-by="them"/>

			<section
				name="privs"
				label="Privileges">

				<context-tab-action-page
					name="editor"/>

				<context-tab-page
					name="summary"/>

			</section>

			<context-link
				name="session"
				link="userSession"
				label="Sessions"
				priv-key="user.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="user">

		<parent-field/>
		<code-field/>
		<description-field/>

		<text-field
			name="fullname"
			label="Full name"/>

		<yes-no-field
			name="active"/>

	</field-set>

	<field-set
		name="create"
		object-name="user">

		<parent-field/>
		<code-field/>
		<description-field/>

		<text-field
			name="fullname"
			label="Full name"/>

		<yes-no-field
			name="active"/>

	</field-set>

	<field-set
		name="summary"
		object-name="user">

		<parent-field/>
		<code-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="fullname"
			label="Full name"/>

		<yes-no-field
			name="active"/>

		<text-field
			name="defaultTimezone"/>

	</field-set>

	<field-set
		name="settings"
		object-name="user">

		<id-field/>
		<parent-field/>
		<code-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="fullname"
			label="Full name"/>

		<yes-no-field
			name="active"/>

		<text-field
			name="defaultTimezone"
			nullable="yes"/>

	</field-set>

	<field-set
		name="groups"
		object-name="group">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

</console-module>
