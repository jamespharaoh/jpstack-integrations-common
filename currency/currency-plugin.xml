<plugin
	name="currency"
	package="wbs.platform.currency">

	<plugin-dependencies>
		<plugin-dependency name="menu"/>
		<plugin-dependency name="platform-common"/>
	</plugin-dependencies>

	<models>
		<model name="currency"/>
	</models>

	<layer name="logic">
		<bean class="logic.CurrencyLogicImplementation"/>
	</layer>

	<layer name="console">
		<bean class="console.CurrencyFormFieldBuilder"/>
		<bean class="console.CurrencyFormFieldInterfaceMapping"/>
		<bean class="console.CurrencyFormFieldSpec"/>
	</layer>

	<fixtures>
		<fixture name="currency"/>
	</fixtures>

	<console-modules>
		<console-module name="currency"/>
	</console-modules>

</plugin>
