<model-meta
	name="messageTemplateType"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="messageTemplateDatabase"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="defaultValue"/>

		<string-field
			name="helpText"/>

		<integer-field
			name="minLength"/>

		<integer-field
			name="maxLength"/>

		<enum-field
			name="charset"
			type="messageTemplateTypeCharset"/>

		<!-- statistics -->

		<integer-field
			name="numParameters"
			default="0"/>

	</fields>

	<collections>

		<children-collection
			type="messageTemplateParameter"/>

	</collections>

</model-meta>