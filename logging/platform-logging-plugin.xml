<plugin
	name="platform-logging"
	package="wbs.platform.logging">

	<plugin-dependencies>
		<plugin-dependency name="platform-common"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="logging-schema"/>
	</sql-scripts>

	<models>

		<enum-type name="loggingEventSeverity"/>

		<model name="loggingGlobalRule"/>
		<model name="loggingDynamicContext"/>
		<model name="loggingDynamicContextInvocation"/>
		<model name="loggingDynamicContextRule"/>
		<model name="loggingEvent"/>
		<model name="loggingStaticContext"/>
		<model name="loggingStaticContextRule"/>

	</models>

	<layer name="logic">
		<component class="logic.PlatformLoggingLogicImplementation"/>
	</layer>

</plugin>
