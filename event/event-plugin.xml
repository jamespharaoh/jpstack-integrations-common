<plugin
	name="event"
	package="wbs.platform.event">

	<plugin-dependencies>
		<plugin-dependency name="platform-common"/>
	</plugin-dependencies>

	<models>
		<model name="event"/>
		<model name="eventLink"/>
		<model name="eventType"/>
	</models>

	<layer name="fixture">
		<bean class="fixture.EventTypeBuilder"/>
		<bean class="fixture.EventTypesBuilder"/>
	</layer>

	<layer name="model-meta">
		<bean class="metamodel.EventTypeSpec"/>
		<bean class="metamodel.EventTypesSpec"/>
	</layer>

	<layer name="logic">
		<bean class="logic.EventLogicImpl"/>
	</layer>

	<layer name="console">
		<bean class="console.EventConsoleLogicImplementation"/>
		<bean class="console.EventDetailsFormFieldBuilder"/>
		<bean class="console.EventDetailsFormFieldInterfaceMapping"/>
		<bean class="console.EventDetailsFormFieldSpec"/>
		<bean class="console.NameFormFieldUpdateHook"/>
		<bean class="console.ObjectEventsPageBuilder"/>
		<bean class="console.ObjectEventsPageSpec"/>
		<bean class="console.ObjectEventsPart"/>
		<bean class="console.SimpleFormFieldUpdateHook"/>
	</layer>

	<fixtures>
		<fixture name="event"/>
	</fixtures>

	<console-modules>
		<console-module name="event"/>
	</console-modules>

</plugin>
