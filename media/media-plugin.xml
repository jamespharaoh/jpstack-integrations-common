<plugin
	name="media"
	package="wbs.platform.media">

	<plugin-dependencies>
		<plugin-dependency name="scaffold"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="content"/>
	</sql-scripts>

	<models>
		<model name="content"/>
		<model name="media"/>
		<model name="mediaType"/>
	</models>

	<layer name="logic">
		<bean class="logic.MediaLogicImpl"/>
	</layer>

	<layer name="console">
		<bean class="console.ImageFormFieldBuilder"/>
		<bean class="console.ImageFormFieldRenderer"/>
		<bean class="console.ImageFormFieldSpec"/>
		<bean class="console.MediaAudioResponder"/>
		<bean class="console.MediaConsoleConfig"/>
		<bean class="console.MediaConsoleLogicImpl"/>
		<bean class="console.MediaImageResponder"/>
		<bean class="console.MediaImageScaleResponder"/>
		<bean class="console.MediaThumb100Responder"/>
		<bean class="console.MediaThumb32Responder"/>
		<bean class="console.MediaVideoResponder"/>
	</layer>

	<fixtures>
		<fixture name="media"/>
	</fixtures>

	<console-modules>
		<console-module name="media"/>
	</console-modules>

</plugin>
