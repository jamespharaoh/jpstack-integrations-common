<plugin
	name="message-template"
	package="wbs.services.messagetemplate">

	<plugin-dependencies>
		<plugin-dependency name="sms-apps-common"/>
		<plugin-dependency name="scaffold"/>
	</plugin-dependencies>

	<models>
		<enum-type name="messageTemplateTypeCharset"/>
		<model name="messageTemplateDatabase"/>
		<model name="messageTemplateEntryType"/>
		<model name="messageTemplateFieldType"/>
		<model name="messageTemplateEntryValue"/>
		<model name="messageTemplateFieldValue"/>
		<model name="messageTemplateSet"/>
		<model name="messageTemplateParameter"/>
	</models>

	<fixtures>
		<fixture name="messageTemplate"/>
	</fixtures>

	<layer name="logic">
		<bean class="logic.MessageTemplateLogicImplementation"/>
	</layer>

	<layer name="api">
		<bean class="api.MessageTemplateMessagesGetAction"/>
	</layer>

	<layer name="console">
		<bean class="console.MessageTemplateEntryValueFieldsProvider"/>
		<bean class="console.MessageTemplateEntryValueFieldsProvider$Config"/>
		<bean class="console.MessageTemplateEntryValueFormFieldDataProvider"/>
	</layer>

	<api-modules>
		<api-module name="message-template"/>
	</api-modules>

	<console-modules>
		<console-module name="message-template-database"/>
		<console-module name="message-template-entry-type"/>
		<console-module name="message-template-entry-value"/>
		<console-module name="message-template-field-type"/>
		<console-module name="message-template-field-value"/>
		<console-module name="message-template-set"/>
		<console-module name="message-template-parameter"/>
	</console-modules>

</plugin>
