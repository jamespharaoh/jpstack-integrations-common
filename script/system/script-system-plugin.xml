<plugin
	name="script-system"
	package="script.system">

	<sql-scripts>
		<sql-schema name="system-script"/>
		<sql-data name="system-script-data"/>
	</sql-scripts>

	<models>
		<model name="systemScript"/>
		<model name="systemScriptRevision"/>
	</models>

	<layer name="logic">
		<bean class="logic.SystemScriptLogicImpl"/>
	</layer>

	<layer name="console">
		<bean class="console.SystemScriptRunPathHandler"/>
		<bean class="console.SystemScriptSourceAction"/>
		<bean class="console.SystemScriptSourcePart"/>
		<bean class="console.SystemScriptStandaloneRequestHandler"/>
	</layer>

	<console-modules>
		<console-module name="system-script"/>
	</console-modules>

</plugin>
