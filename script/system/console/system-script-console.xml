<console-module
	name="system-script">

	<console-helper-provider
		object-name="systemScript">

		<priv-key
			name="systemScript.manage"
			priv="manage"/>

		<priv-key
			name="systemScript.run"
			priv="run"/>

		<context-stuff
			name="systemScriptName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="systemScript"
		object-name="systemScript">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-tab-action-page
				name="source"/>

			<context-request-handler
				name="standalone"/>

			<object-events-page/>

		</object>

	</object-context>

	<simple-path
		path="/systemScript.run"
		handler="systemScriptRunPathHandler"/>

	<field-set
		name="list"
		object-name="systemScript">

		<name-field/>
		<description-field/>

		<object-field
			name="scriptLanguage"
			finder="scriptLanguage"/>

		<yes-no-field
			name="standalone"/>

		<integer-field
			name="revision"/>

	</field-set>

	<field-set
		name="summary"
		object-name="systemScript">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="scriptLanguage"
			finder="scriptLanguage"/>

		<yes-no-field
			name="standalone"/>

		<integer-field
			name="revision"/>

	</field-set>

	<field-set
		name="settings"
		object-name="systemScript">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="scriptLanguage"
			finder="scriptLanguage"/>

		<yes-no-field
			name="standalone"/>

	</field-set>

</console-module>
